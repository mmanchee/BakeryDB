  Layout = "_Layout";
}

@using BakeryDB.Models;

<h1>Vendors matching search</h1>
<p>_ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _</p>
@if (@Model.Count == 0)
{
  <h3>No vendors available!</h3>
} 
else
{
  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  }
}

